generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id          String   @id @default(uuid())
  channel     String   @unique()
  accessToken String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

